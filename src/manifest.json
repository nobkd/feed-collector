{
  "manifest_version": 2,
  "name": "Feed Collector",
  "version": "1.0",
  "description": "Collect all feeds on the current page.",
  "icons": {
    "48": "icons/48-icon.png",
    "96": "icons/96-icon.png"
  },
  "permissions": [
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/48-icon.png",
      "96": "icons/96-icon.png"
    },
    "default_area": "navbar",
    "default_title": "Collect Feeds",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}